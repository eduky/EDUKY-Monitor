# Docker Compose环境变量配置
# 复制此文件为 .env 并根据需要修改

# 应用配置
PORT=5000
FLASK_ENV=production
TZ=Asia/Shanghai

# Nginx配置 (使用 --profile with-nginx 启用)
NGINX_PORT=80
NGINX_SSL_PORT=443

# 数据库配置
DB_PATH=/opt/eduky-monitor/web/instance/inventory_monitor_v2.db

# 日志配置
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# 安全配置
SECRET_KEY_FILE=/opt/eduky-monitor/web/instance/secret_key.txt

# 备份配置
BACKUP_RETENTION_DAYS=7